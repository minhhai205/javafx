<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:id="bookBlock" fx:controller="com.example.home.BookBlockController" spacing="10" style="-fx-padding: 10; -fx-border-color: gray; -fx-background-color: #f0f0f0;">
    <ImageView fx:id="bookImage" fitWidth="120" fitHeight="160" />
    <Label fx:id="titleLabel" style="-fx-font-size: 14; -fx-font-weight: bold;" />
    <Label fx:id="authorLabel" style="-fx-font-size: 12; -fx-text-fill: #555555;" />
</VBox>
